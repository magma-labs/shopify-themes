    <!-- products -->
    <div class="products-container">

      <div class="title">
        <h1 class="heading-with-lines">{{ collection.title }}</h1>
      </div>

      <div class="products-list">

        {% if collection.all_products_count > 0 %}

        <!-- <div class="pagination-container">
          <a href="#" class="prev-btn">
