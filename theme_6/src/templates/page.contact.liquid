<div class="page-contac-us">
  <div class="medium-down--hide">{% include 'breadcrumbs' %}</div>
  <h1>{{ page.title }}</h1>

  {% comment %}
  <div class="rte">
    {{ page.content }}
  </div>
  {% endcomment %}

  <div class="contact-body-wrapper">

    <!-- Body content -->
    <div class="contact-body-content">

      <!-- Form super-wrapper -->
      <div class="contact-form-super-wrapper">

        <!-- Form title -->
        <h2>Get In Touch</h2>

        <!-- Form wrapper -->
        <div class="contact-form-wrapper">

          <!-- Form content -->
          <div class="contact-form-content">

            <!-- Form description -->
            <p>
              Weâ€™re very approachable and would love to hear from you. Feel free to call us, send us an email,
              tweet or say hi throught our facebook page!
            </p>

            <!-- Form social media -->
            <div class="contact-social-media">
              {%- assign social_accounts = 'Facebook, Twitter, Googleplus' | split: ', ' -%}
              <ul>
              {% for social in social_accounts %}
                {%- assign social_handle = social | handleize -%}
                {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
                {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

                {% if settings[social_link] != blank %}
                  <li>
                    <a href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
                      {% include social_icon %}
                      <span class="icon-fallback-text">{{ social }}</span>
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
              </ul>
            </div>

            {% form 'contact' %}

              {% if form.posted_successfully? %}
                <p class="form-success">
                  {{ 'contact.form.post_success' | t }}
                </p>
              {% endif %}

              {{ form.errors | default_errors }}

              <!-- Name and phone fields -->
              <!-- Labels -->
              <div class="contact-label-field-content small--hide">
                <div class="contact-wrapper-column-field">
                  <div class="contact-column-field-content">
                    <label for="ContactFormName">{{ 'contact.form.name' | t }}*:</label>
                  </div>
                  <div class="contact-column-field-content">
                    <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}:</label>
                  </div>
                </div>
              </div>
              <!-- Fields -->
              <div class="contact-small-field-content small--hide">
                <div class="contact-wrapper-column-field">
                  <div class="contact-column-field-content">
                    <input type="text" class="contact-column-field"
                      name="contact[name]"
                      id="ContactFormName"
                      value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
                  </div>

                  <div class="contact-column-field-content">
                    <input type="tel" class="contact-column-field"
                      name="contact[phone]"
                      id="ContactFormPhone"
                      placeholder="+(52)"
                      value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                      pattern="[0-9\-]*">
                  </div>
                </div>
              </div>

              <!-- Name mobile -->
              <div class="contact-label-field-content small--show medium-up--hide">
                <label for="ContactFormNameMobile">{{ 'contact.form.name' | t }}*:</label>
              </div>
              <div class="contact-small-field-content small--show medium-up--hide">
                <input type="text" class="contact-form-large-field"
                  name="contact[name]"
                  id="ContactFormNameMobile"
                  value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
                  spellcheck="false"
                  autocomplete="off"
                  autocapitalize="off">
              </div>

              <!-- Phone mobile -->
              <div class="contact-label-field-content small--show medium-up--hide">
                <label for="ContactFormPhoneMobile">{{ 'contact.form.phone' | t }}:</label>
              </div>
              <div class="contact-small-field-content small--show medium-up--hide">
                <input type="tel" class="contact-form-large-field"
                  name="contact[phone]"
                  id="ContactFormPhoneMobile"
                  value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                  spellcheck="false"
                  autocomplete="off"
                  autocapitalize="off">
              </div>

              <!-- Email -->
              <div class="contact-label-field-content">
                <label for="ContactFormEmail">{{ 'contact.form.email' | t }}*:</label>
              </div>
              <div class="contact-small-field-content">
                <input type="email" class="contact-form-large-field"
                  name="contact[email]"
                  id="ContactFormEmail"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                  spellcheck="false"
                  autocomplete="off"
                  autocapitalize="off">
              </div>

              <!-- Subject -->
              <div class="contact-label-field-content">
                <label for="ContactFormSubject">{{ 'contact.form.subject' | t }}*:</label>
              </div>
              <div class="contact-small-field-content">
                <input type="text" class="contact-form-large-field"
                  name="contact[email]"
                  id="ContactFormSubject"
                  value="{% if form.subject %}{{ form.subject }}{% endif %}"
                  spellcheck="false"
                  autocomplete="off"
                  autocapitalize="off">
              </div>

              <!-- Message -->
              <div class="contact-label-field-content">
                <label for="ContactFormMessage">{{ 'contact.form.message' | t }}*:</label>
              </div>
              <div class="contact-text-area">
                <textarea rows="10"
                  name="contact[body]"
                  id="ContactFormMessage">
                  {% if form.body %}
                    {{ form.body }}
                  {% endif %}
                </textarea>
              </div>

              <!-- Submit -->
              <div class="contact-sumbit-container">
                <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
              </div>

            {% endform %}
          </div>
        </div>
      </div>

      <!-- Contact footer -->
      <div class="contact-footer-wrapper">

        <!-- Footer address info -->
        <div class="contact-footer-element contact-address-info">
          <img src="{{ 'address-info.png' | asset_url }}" class="small-portrait--hide">
          <img src="{{ 'address-info-mobile.png' | asset_url }}" class="small-portrait-up--hide small-portrait--show">
          <div class="contact-address-content">
            <h3>Come Visit!</h3>
            <span>You can findus at:</span>
            <span>3798 Somerset Drive</span>
            <span>Apple Valley, CA 92307</span>
          </div>
        </div>

        <!-- Footer map -->
        <div class="contact-footer-element contact-map" id="contact-map"></div>
      </div>

      <!-- Contact scroll up mobile -->
      <div class="contact-scroll-up small-portrait-up--hide small-portrait--show">
        <a href="javascript:void(0)" title="Scroll Up" onclick="window.scrollTo(0, 0);">
          <span>Sroll Up</span>
        </a>
      </div>

        <script>
          function initMap() {
                  var addr = {lat: 34.5374734, lng: -117.3586767};
                  var map = new google.maps.Map(document.getElementById('contact-map'), {
                          zoom: 15,
                          center: addr,
                          disableDefaultUI: true
                  });
                  var marker = new google.maps.Marker({
                          position: addr,
                          map: map
                  });
          }
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDe3WTB9rr6LR94nulsutupxpusd7u_q-c&callback=initMap"></script>

    </div>

  </div>

</div>
