        <div class="row">
        {% for product in collection.products %}

          <a href="{{ product.url }}" class="product-link col-lg-4">
            <div class="product-item">
              <img class="product-image" src="{{ product.featured_image | product_img_url: '240x360' }}" alt="{{ product.title | escape }}">
              <div class="product-text">
                <p class="product-name">{{ product.title }}</p>
                <p class="product-price">{{ product.price | money }}</p>
              </div>
            </div>
          </a>

        {% endfor %}
        </div>
        {% else %}
        <p class="message-empty-collection">Sorry, there are no products in this collection.</p>
        {% endif %}

      </div>

    </div>
