div.page-about-us {
  width: 100%;
  background-color: $color-body;

  h1 {
    font-size: 32px;
    font-family: $font-title-body;
    text-align: center;
    text-transform: uppercase;
    color: $color-body-title;
  }

  div.page-body-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    // Banner section
    .page-body-banner {
      display: block;
      height: 400px;
      width: 1370px;
      margin-bottom: 25px;
      position: relative;
      {% comment %}
      background-image: url({{ 'banner-about-us.png', asset_url }});
      background-repeat: no-repeat;
      display: flex;
      align-items: center;
      {% endcomment %}
      img {
        width: 100%;
        height: 100%;
      }
      .page-about-banner-legend {
        color: #ffffff;
        height: 195px;
        width: 530px;
        // margin-left: 70px;
        position: absolute;
        left: 70px;
        top: 100px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        .page-about-banner-title {
          height: 35px;
          width: 100%;
          text-transform: uppercase;
          font-family: $font-title-body;
          font-size: 32px;
          display: flex;
          justify-content: center;
          align-items: center;
        }
        .page-about-banner-description {
          text-align: center;
          font-size: 19px;
          height: 140px;
          width: 100%;
          display: flex;
          justify-content: center;
        }
      }
    }

    // Story section
    .page-body-story {
      background-color: #ffffff;
      height: 400px;
      width: 1370px;
      margin-bottom: 25px;
      display: flex;
      justify-content: center;
      align-items: center;
      .about-story-content {
        height: 350px;
        width: 1117px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        .about-story-title {
          text-transform: uppercase;
          font-size: 28px;
          width: 100%;
          height: 34px;
          display: flex;
          justify-content: center;
          align-items: center;
        }
        .about-story-description {
          width: 100%;
          height: 300px;
          column-count: 2;
          font-size: 20px;
          white-space: pre-line;
        }
      }
    }

    // More about section
    .page-body-more-about {
      height: 350px;
      width: 1370px;
      margin-bottom: 25px;
      display: flex;

      .more-about-legend {
        height: 100%;
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        .more-about-content {
          height: 257px;
          width: 530px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          .more-about-title {
            text-transform: uppercase;
            font-size: 28px;
            height: 60px;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
          }
          .more-about-description {
            height: 184px;
            width: 100%;
            text-align: center;
            font-size: 20px;
          }
        }
      }

      .more-about-image {
        height: 100%;
        width: 50%;
        img {
          height: 100%;
          width: 100%;
        }
      }
    }

    // Images section
    .page-body-images {
      height: 400px;
      width: 1370px;
      margin-bottom: 25px;
      display: flex;
      flex-direction: row;
      justify-content: space-between;

      div {
        height: 100%;
        // width: 440px;
        width: 32%;
        img {
          height: 100%;
          width: 100%;
        }
      }
    }
  }
}

@include media_query($large-hd-down) {
  div.page-about-us {
    div.page-body-content {
      // Banner section
      .page-body-banner {
        width: 100%;
        .page-about-banner-legend {
          width: 480px;
          left: 55px;
          .page-about-banner-title {
            font-size: 30px;
          }
          .page-about-banner-description {
            font-size: 17px;
          }
        }
      }
      // Story section
      .page-body-story {
        width: 100%;
        .about-story-content {
          width: 100%;
          .about-story-title {
            font-size: 26px;
          }
          .about-story-description {
            font-size: 18px;
            padding: 0 5px 0 5px;
          }
        }
      }
      // More about section
      .page-body-more-about {
        width: 100%;
        .more-about-legend {
          .more-about-content {
            .more-about-title {
              font-size: 26px;
            }
            .more-about-description {
              font-size: 18px;
            }
          }
        }
      }
      // Images section
      .page-body-images {
        width: 100%;
      }
    }
  }
}

