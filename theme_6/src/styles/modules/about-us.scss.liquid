        height: 447px;
        width: 100%;
        .page-about-banner-legend {
          height: 190px;
          width: 100%;
          top: 256px;
          left: 0;
          .page-about-banner-title {
            font-size: 16px;
          }
          .page-about-banner-description {
            font-size: 14px;
            height: 150px;
            padding: 0 3px 0 3px;
          }
        }
      }
      // Story section
      .page-body-story {
        height: 483px;
        .about-story-content {
          height: 100%;
          .about-story-title {
            font-size: 18px;
            height: 60px;
          }
          .about-story-description {
            text-align: center;
            font-size: 12px;
            height: 423px;
            column-count: 1;
          }
        }
      }
      // More about section
      .page-body-more-about {
        height: 399px;
        flex-direction: column;
        .more-about-legend {
          width: 100%;
          height: 149px;
          .more-about-content {
            height: 100%;
            .more-about-title {
              font-size: 18px;
            }
            .more-about-description {
              font-size: 11px;
            }
          }
        }
        .more-about-image {
          height: 250px;
          width: 100%;
        }
      }
      // Button scroll top
      .page-body-scroll-up {
        height: 57px;
        width: 100%;
        display: flex !important;
        justify-content: center;
        a {
          color: white;
          background-color: #4A90E2;
          border-radius: 3px;
          height: 40px;
          width: 150px;
          display: flex !important;
          justify-content: center;
          align-items: center;
          span {
            text-transform: uppercase;
          }
        }
      }

    }
  }
}
