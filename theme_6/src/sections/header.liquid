<div data-section-id="{{ section.id }}" data-section-type="header-section">
  <header role="banner">

    <div class="header-section-icon">

      <div id="nvar-open" class="nav-mobile large-up--hide medium-down--show">
        {% include 'icon-menu' %} Menu
      </div>

      <h1 itemscope itemtype="http://schema.org/Organization">
        <a href="/" itemprop="url" class="site-logo site-header__logo-image">
          <img src="{{ 'logo.png' | asset_url }}" class="medium-down--hide">
          <img src="{{ 'logo-mobile.png' | asset_url }}" class="large-up--hide medium-down--show">
        </a>
      </h1>

      <div class="section-cart-mobile large-up--hide medium--show">
        <a href="/cart">
          <span>{{ cart.item_count }}</span>
          {% include 'icon-cart' %}
        </a>
      </div>
    </div>

    <div class="header-top-right medium-down--hide">
      <form class="search-form" action="/search" method="get" role="search">
        <label for="Search" class="label-hidden">
          {{ 'general.search.placeholder' | t }}
        </label>
        <div class="row">
          <div class="col-xs-6">
            <div class="input-group">
                    <input type="text" placeholder="{{'general.search.placeholder' | t}}"/>
              <button class="input-group-addon" type="submit">
                {% include 'icon-search' %}
              </button>
            </div>
          </div>
        </div>
      </form>

      {% if shop.customer_accounts_enabled %}
        <ul class="customer-options small-hide">
          {% if customer %}
            <li>
              {% if customer.first_name != blank %}
                {% capture first_name %}<a href="/account">{{ customer.first_name }}</a>{% endcapture %}
                {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
              {% else %}
                <a href="/account">{{ 'layout.customer.account' | t }}</a>
              {% endif %}
            </li>
            <li>
              {{ 'layout.customer.log_out' | t | customer_logout_link }}
            </li>
          {% else %}
            <li>
              {{ 'layout.customer.log_in' | t | customer_login_link }}
            </li>
            <li>
              {{ 'layout.customer.create_account' | t | customer_register_link }}
            </li>
          {% endif %}
        </ul>
      {% endif %}

    </div>

    <nav role="navigation" class="medium-down--hide">
      <div class="header-nav-content">
        <ul class="site-nav">

          {% for link in linklists[section.settings.main_linklist].links %}
            {%- assign child_list_handle = link.title | handleize -%}
            {% if menus[child_list_handle].links != blank %}
              <li class="site-nav--has-submenu{% if link.active %} site-nav--active{% endif %}">
                <a href="{{ link.url }}" class="site-nav__link">
                  {{ link.title }}
                  {% include 'icon-arrow-down' %}
                </a>
                <ul class="site-nav__submenu">
                  {% for childlink in menus[child_list_handle].links %}
                    <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                      <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </li>
            {% else %}
              <li {% if link.active %}class="site-nav--active"{% endif %}>
                <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
              </li>
            {% endif %}
          {% endfor %}

        </ul>
      </div>

      <div class="header-cart">
        <a href="/cart">
          <span class="small--hide">{{ 'layout.cart.title' | t }}</span>
          <span>{{ cart.item_count }}</span>
          {% comment %}
          <span class="small--hide">{{ 'layout.cart.items_count' | t: count: cart.item_count }}</span>
          {% endcomment %}
          {% include 'icon-cart' %}
        </a>
      </div>

    </nav>

    <!-- Menu mobile -->
    <!-- <div id="NavDrawer" class="drawer drawer--left medium-up--hide"> -->
    <div id="NavDrawer" class="drawer drawer--left">
      <div id="shopify-section-sidebar-menu" class="shopify-section sidebar-menu-section">
        <!-- Header -->
        <div class="drawer__header" data-section-id="sidebar-menu" data-section-type="sidebar-menu-section">
          <div id="navbar-close" class="drawer__close">
            <img src="{{ 'logo-close-nav.png' | asset_url }}">
            <div class="button-nav-close">
              Close {% include 'menu-mobile-close' %}
            </div>
          </div>
        </div>

        <!-- Body -->
        <div class="drawer__inner">
          <ul class="drawer-nav">
            {% for link in linklists[section.settings.main_linklist].links %}
              {%- assign child_list_handle = link.title | handleize -%}
              {% if menus[child_list_handle].links != blank %}
                <li class="site-nav--has-submenu{% if link.active %} site-nav--active{% endif %}">
                  <a href="{{ link.url }}" class="site-nav__link">
                    {{ link.title }}
                    {% include 'icon-arrow-down' %}
                  </a>
                  <ul class="site-nav__submenu">
                    {% for childlink in menus[child_list_handle].links %}
                      <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                        <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li {% if link.active %}class="site-nav--active"{% endif %}>
                  <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

          <ul class="drawer-user-info">
          </ul>

          <div class="drawer-social-media">
          </div>
          <div class="drawer-newsletter">
          </div>

          <ul class="drawer-second-nav">
            {%- assign footer_linklist_mobile = section.settings.footer_linklist_mobile -%}
            {% if linklists[footer_linklist_mobile].links.size > 0 %}<Paste>
              {% for link in linklists[footer_linklist_mobile].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>
      </div>
    </div>

  </header>
</div>

<script type="text/javascript">
  $(document).ready(function() {

    // Toggle navBar
    $("#nvar-open").on('click', toggleNavBar);
    $("#navbar-close").on('click',  toggleNavBar);

    function toggleNavBar(){
      console.log("Test");
      $('#NavDrawer').toggleClass('drawer--show');
    }
  });  
</script>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_mobile",
        "label": "First menu",
        "default": "footer"
      },
    ]
  }
{% endschema %}

