div.page-contac-us {
  width: 100%;
  background-color: $color-body;

  h1 {
    font-size: 32px;
    font-family: $font-title-body;
    text-align: center;
    text-transform: uppercase;
    color: $color-body-title;
  }

  .contact-body-wrapper {
    height: 1300px;
    width: 100%;
    display: flex;
    justify-content: center;

    // Body content
    .contact-body-content {
      height: 1270px;
      width: 1368px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      // Form super-wrapper
      .contact-form-super-wrapper {
        background-color: #ffffff;
        height: 945px;
        width: 100%;

        // Form Title
        h2 {
          text-transform: uppercase;
          font-size: 28px;
          font-family: $font-title-body;
          margin: 0;
          padding: 0;
          height: 96px;
          width: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
        }

        // Form wrapper
        .contact-form-wrapper {
          height: 847px;
          width: 100%;
          display: flex;
          justify-content: center;

          // Form content
          .contact-form-content {
            height: 100%;
            width: 675px;

            // Form description
            p {
              font-size: 20px;
              text-align: center;
              margin: 0;
              padding: 0;
              height: 100px;
              width: 100%;
            }

            // Form social media
            .contact-social-media {
              height: 78px;
              width: 100%;
              display: flex;
              justify-content: center;

              ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                li {
                  margin: 0 23px 0 0;
                  padding: 0;
                  height: 35px;
                  width: 93px;
                  border: 2px solid $color-link-text; 
                  border-radius: 3px;
                  display: flex;
                  justify-content: center;
                  align-items: center;
                  a {
                    width: 100%;
                    height: 100%;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                  }
                }
                li:last-child {
                  margin-right: 0;
                }
              }
            }

            // Form label fields
            .contact-label-field-content {
              height: 42px;
              width: 100%;
              color: $color-contact-form;
              font-size: $font-size-contact-form;
              font-weight: $font-weight-bold;
            }
            // Contact field
            .contact-small-field-content {
              height: 59px;
              width: 100%;
              input {
                height: 40px;
                background-color: #FBFBFB;
                border: 1px solid #D2D2D2;
                border-radius: 3px;
                padding-left: 10px;
              }
            }
            // Wrapper column
            .contact-wrapper-column-field {
              height: 100%;
              width: 100%;
              display: flex;
              justify-content: space-between;
              .contact-column-field-content {
                height: 100%;
                width: 325px;
              }
            }
            // Column field
            .contact-column-field {
              width: 324px;
            }
            // large field
            .contact-form-large-field {
              width: 100%;
            }
            // Text area
            .contact-text-area {
              width: 100%;
              height: 198px;
              textarea {
                width: 100%;
                padding: 5px 0 0 10px;
                height: 145px;
                background-color: #FBFBFB;
                border: 1px solid #D2D2D2;
                border-radius: 3px;
              }
            }
            // Button submit
            .contact-sumbit-container {
              height: 78px;
              width: 100%;
              display: flex;
              justify-content: center;
              input {
                height: 77px;
                width: 320px;
                background-color: #4A90E2;
                font-size: 32px;
                font-family: $font-title-body;
                text-transform: uppercase;
                color: #ffffff;
              }
            }

          }
        }
      }

      // Footer wrapper
      .contact-footer-wrapper {
        width: 100%;
        height: 300px;
        clear: both;

        > .contact-footer-element {
          display: inline-block;
          width: 50%;
          height: 100%;
          float: left;
        }

        .contact-address-info {
          {% comment %}
          background-image: url({{ 'address-info.png', asset_url }});
          background-repeat: no-repeat;
          display: flex;
          flex-direction: column;
          justify-content: center;
          {% endcomment %}
          position: relative;
          img {
            height: 100%;
            width: 100%;
          }

          .contact-address-content {
            height: 50%;
            width: 40%;
            position: absolute;
            top: 20%;
            left: 30%;
            display: flex;
            flex-direction: column;
            h3 {
              text-transform: uppercase;
              text-align: center;
              font-size: 32px;
              font-family: $font-title-body;
              color: white;
              margin: 0;
              padding: 0;
              width: 100%;
              // height: 63px;
              flex-grow: 1000;
              display: block;
            }
            span {
              text-align: center;
              font-size: 20px;
              color: white;
              display: block;
              margin: 0;
              padding: 0;
              // height: 24px;
              flex-grow: 1;
              width: 100%;
            }
          }
        }

        // Footer map
        a[href^="http://maps.google.com/maps"],
        a[href^="https://maps.google.com/maps"],
        a[href^="https://www.google.com/maps"] {
          display: none !important;
        }
        .gmnoprint:not(.gm-bundled-control) {
            display: none;
        }
        .gm-bundled-control .gmnoprint {
            display: block;
        }
      }

    }
  }
}

@include media_query($medium-down) {
  div.page-contac-us {
    .contact-body-wrapper {
      .contact-body-content {
        width: 100%;
      }
    }
  }
}

@include media_query($small) {
  div.page-contac-us {
    .contact-body-wrapper {
      height: 1320px;
      .contact-body-content {
        height: 1320px;
        .contact-form-super-wrapper {
          height: 725px;
          h2 {
            font-size: 16px;
            height: 60px;
          }
          .contact-form-wrapper {
            .contact-form-content {
              width: 100%;
              p {
                font-size: 14px;
                height: 79px;
                width: 98%;
                padding-left: 2%;
              }
              .contact-social-media {
                height: 67px;
              }
              .contact-label-field-content {
                height: 30px;
                padding-left: 2%;
                label {
                  font-size: 20px;
                  width: 98%;
                }
              }
              .contact-small-field-content {
                height: 44px;
                padding-left: 2%;
                input {
                  height: 40px;
                  width: 98%;
                }
              }
              .contact-text-area {
                height: 120px;
                padding-left: 2%;
                textarea {
                  height: 80px;
                  width: 98%;
                  padding: 0;
                }
              }
              .contact-sumbit-container {
                height: 41px;
                input {
                  font-size: 16px;
                  height: 40px;
                }
              }
            }
          }
        }

        .contact-footer-wrapper {
          height: 500px;
          display: flex;
          flex-direction: column-reverse;
          > .contact-footer-element {
            display: block;
            width: 100%;
          }
          .contact-address-info {
            height: 200px;
            .contact-address-content {
              h3 {
                font-size: 20px;
              }
              span {
                font-size: 16px;
              }
            }
          }
          .contact-map {
            height: 300px;
          }
        }

        .contact-scroll-up {
          height: 55px;
          width: 100%;
          display: flex !important;
          justify-content: center;
          a {
            color: white;
            background-color: #4A90E2;
            border-radius: 3px;
            height: 40px;
            width: 150px;
            display: flex !important;
            justify-content: center;
            align-items: center;
            span {
              font-size: 16px;
              text-transform: uppercase;
            }
          }
        }

      }
    }
  }
}

@include media_query($small-portrait) {
  div.page-contac-us {
    h1 {
      font-size: 20px;
    }
    .contact-body-wrapper {
      .contact-body-content {
        .contact-form-super-wrapper {
          .contact-form-wrapper {
            .contact-form-content {
              .contact-social-media {
                ul {
                  width: 100%;
                  justify-content: space-between;
                  li {
                    width: 30%;
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
